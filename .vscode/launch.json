    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: scrapy",
            "type": "debugpy",
            "request": "launch",
            "program": ".venv/bin/scrapy",
            "console": "integratedTerminal",
            //"args": "crawl hotels -a max_hotels=100 -a shuffle=1"
            "args": "crawl countries"
        }

    ]
}